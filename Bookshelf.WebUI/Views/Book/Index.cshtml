@model Bookshelf.WebUI.Models.Book.BookModel;


<div>
    <div class="row">
        <div class="col-md-6">
            <h3 class="page-title">
                @ViewBag.pageTitle1
            </h3>
        </div>
        <div class="col-md-6">
            <div class="text-right mb-2">
                <a class="btn btn-light btn-fw font-weight-bold text-white" asp-controller="Bookshelf" asp-action="Index" title="Geri">
                    <i class="fa fa-reply"></i>
                </a>
                <button type="button" class="btn btn-inverse-danger btn-fw font-weight-bold text-white" data-toggle="modal" data-target="#pageAddModel"><i class="fa fa-plus text-danger"></i> Yeni Sayfa Ekle</button>
            </div>
        </div>
    </div>
</div>
<warning title="Uyarı" message="@Context.Request.Query["message"]" status="@Context.Request.Query["status"]"></warning>


<div class="card-body">
    <div class="row">
        <div class="col-12">
            <div class="row">
                @{int i = 1;}
                @foreach (var bookPage in Model.BookPages)
                {
                    <div class="col-md-2 col-12 mt-2 book-page-body">
                        <div class="head-book-page text-center">
                            <div class="pt-3">
                                <span class="book-page-title h4">@(i++). Sayfa</span>
                            </div>
                            <div class="pt-3">
                                <span class="book-page-desk mt-2 h6">@bookPage.BookPageTitle</span>
                            </div>
                        </div>
                        <div class="footer-book-page text-center">
                            <div class="btn-group mt-1" role="group">
                                <a class="btn btn-dark" asp-controller="BookPage" asp-action="Write" asp-route-ID="@bookPage.BookPageID" >Detay</a>
                                <a class="btn btn-primary btn-inverse-warning" asp-controller="BookPage" asp-action="Delete" asp-route-ID="@bookPage.BookPageID"><i class="fas fa-trash text-white"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<!-- Modal starts -->

<div class="modal fade" id="pageAddModel" tabindex="-1" role="dialog" aria-labelledby="pageAddModel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel-2">@ViewBag.pageTitle1</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@ViewBag.pageTitle1 @(Model.BookPages.Count()+1). sayfayı ekle.</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-inverse-danger btn-fw font-weight-bold text-white" asp-controller="BookPage" asp-action="Add" asp-route-ID="@Model.BookID">Evet</a>
                <button type="button" class="btn btn-light" data-dismiss="modal">İpal</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Ends -->
