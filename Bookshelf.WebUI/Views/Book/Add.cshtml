@model Bookshelf.WebUI.Models.Book.BookAddModel;

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.BookshelfName Yeni kitap ekle</h4>
            <p class="card-description">
            </p>
            <form class="forms-sample" asp-controller="Book" asp-action="Add">
                <input asp-for="@Model.BookshelfName"  hidden/>
                <input type="text" asp-for="BookshelfID" value="@Model.BookshelfID" hidden/>
                <div class="text-right">
                    <button type="submit" class="btn btn-danger btn-fw font-weight-bold text-white"><i class="fa fa-plus"></i> Ekle</button>
                    <a asp-controller="Bookshelf" asp-action="Index" class="btn btn-light">İptal</a>
                </div>
                <div class="form-group">
                    <label asp-for="BookName"></label>
                    <input type="text" class="form-control" asp-for="BookName">
                    <span class="text-danger" asp-validation-for="BookName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BookExplain"></label>
                    <textarea class="form-control" asp-for="BookExplain" rows="4"></textarea>
                    <span class="text-danger" asp-validation-for="BookExplain"></span>
                </div>
                
                <div class="text-right">
                    <button type="submit" class="btn btn-danger btn-fw font-weight-bold text-white"><i class="fa fa-plus"></i> Ekle</button>
                    <a asp-controller="Bookshelf" asp-action="Index" class="btn btn-light">İptal</a>
                </div>

            </form>
        </div>
    </div>
</div>